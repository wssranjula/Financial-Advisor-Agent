# Production Environment Variables for fly.io
# Copy these and set them as secrets in fly.io

# Application
APP_NAME=Financial Advisor AI Agent
APP_ENV=production
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-use-secrets-token-urlsafe-32

# Database (use your fly.io Postgres URL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (if using fly.io Redis)
REDIS_URL=redis://host:6379/0

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://financial-advisor-agent-be.fly.dev/api/auth/google/callback

# HubSpot OAuth
HUBSPOT_APP_ID=your-hubspot-app-id
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=https://financial-advisor-agent-be.fly.dev/api/auth/hubspot/callback

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Frontend URL (CRITICAL - must be your Vercel URL)
FRONTEND_URL=https://financial-advisor-agent-kgqs.vercel.app

# Encryption Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (include your Vercel URL)
ALLOWED_ORIGINS=["https://financial-advisor-agent-kgqs.vercel.app"]
